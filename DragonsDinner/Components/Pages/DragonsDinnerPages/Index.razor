    public async void IncrementarCantidad(CarritosDetallesDto detalle)
    {
        var existente = CarritoAMostrar.CarritoDetalle.FirstOrDefault(d => d.Producto.ProductoId == detalle.Producto.ProductoId);
        if (existente != null)
        {
            existente.Cantidad++;
            existente.Costo = existente.Cantidad * existente.Producto.Precio; // Actualizar el costo
        }
        await carritoService.Guardar(CarritoAMostrar);
    }

    public async void DecrementarCantidad(CarritosDetallesDto detalle)
    {
        var existente = CarritoAMostrar.CarritoDetalle.FirstOrDefault(d => d.Producto.ProductoId == detalle.Producto.ProductoId);
        if (existente != null)
        {
            if (existente.Cantidad > 1)
            {
                existente.Cantidad--;
                existente.Costo = existente.Cantidad * existente.Producto.Precio;
            }
            else
            {
                CarritoAMostrar.CarritoDetalle.Remove(existente);
            }
        }
        await carritoService.Guardar(CarritoAMostrar);
    }


    public async Task AgregarAlCarrito(ProductosDto producto)
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // Verificar si el usuario no está autenticado
        if (user.Identity == null || !user.Identity.IsAuthenticated)
        {
            Toast.Notify(new(ToastType.Warning, $"Debe iniciar sesión para guardar una tarjeta."));
            await Task.Delay(4000);
            NavigationManager.NavigateTo("/Account/Login");
            return;
        }

        // Obtener el ID del usuario autenticado
        string? usuarioId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (string.IsNullOrEmpty(usuarioId))
        {
            Toast.Notify(new(ToastType.Danger, $"No se pudo obtener el ID del usuario."));
            return;
        }

        // Asignar el ID del usuario al carrito
        CarritoAMostrar.UsuarioId = usuarioId;

        // Verificar que el producto no sea nulo
        if (producto == null)
        {
            throw new ArgumentNullException(nameof(producto), "El producto no puede ser nulo.");
        }

        // Inicializar el carrito si es necesario
        if (CarritoAMostrar == null)
        {
            CarritoAMostrar = new CarritosDto
                {
                    UsuarioId = usuarioId // Asigna el ID del usuario al carrito
                };
        }

        // Inicializar el detalle del carrito si es necesario
        if (CarritoAMostrar.CarritoDetalle == null)
        {
            CarritoAMostrar.CarritoDetalle = new List<CarritosDetallesDto>();
        }

        // Buscar si el producto ya existe en el carrito
        var existente = CarritoAMostrar.CarritoDetalle.FirstOrDefault(d => d.Producto.ProductoId == producto.ProductoId);
        if (existente == null)
        {
            // Si no existe, agregar un nuevo detalle al carrito
            CarritoAMostrar.CarritoDetalle.Add(new CarritosDetallesDto
                {
                    Producto = producto.Mappear(),
                    Cantidad = 1,
                    Costo = producto.Precio
                });
        }
        else
        {
            // Si ya existe, incrementar la cantidad y actualizar el costo
            existente.Cantidad++;
            existente.Costo = existente.Cantidad * existente.Producto.Precio;
        }

        // Verificar que carritoService no sea nulo
        if (carritoService == null)
        {
            throw new InvalidOperationException("El servicio de carrito no ha sido inicializado.");
        }

        // Guardar el carrito
        await carritoService.Guardar(CarritoAMostrar);

        Toast.Notify(new(ToastType.Success, $"Producto agregado al carrito correctamente."));
    }

