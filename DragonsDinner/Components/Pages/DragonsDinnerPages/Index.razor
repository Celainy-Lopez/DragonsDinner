    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var usuario = authState.User;

        if (usuario.Identity is not null && usuario.Identity.IsAuthenticated)
        {
            Console.WriteLine("Usuario autenticado.");

            string? usuarioId = usuario.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(usuarioId))
            {
                CarritoAMostrar.UsuarioId = usuarioId;
                UsuarioLogeado = usuarioId;
                var resultado = await carritoService.Listar(usuarioId);

                if (resultado is not null) CarritoAMostrar = resultado;

            }
            else
            {
                Console.WriteLine("No se pudo obtener el ID del usuario.");
            }
        }
        else
        {
            Console.WriteLine("Usuario no autenticado.");
            // Crear un carrito temporal para el usuario no autenticado
            CarritoAMostrar = new CarritosDto
                {
                    CarritoDetalle = new List<CarritosDetallesDto>()
                };
        }

        // Cargar categorías y productos
        Categorias = await categoriasService.Listar(p => true);
        ListProductos = await productosService.Listar(p => true);

        // Evitar duplicados y consolidar los productos en el carrito
        if (CarritoAMostrar.CarritoDetalle != null && CarritoAMostrar.CarritoDetalle.Count > 0)
        {
            foreach (var detalle in CarritoAMostrar.CarritoDetalle)
            {
                // Verificar si el producto ya está en el carrito
                var productoExistente = CarritoAMostrar.CarritoDetalle.FirstOrDefault(d => d.Producto.ProductoId == detalle.Producto.ProductoId);

                if (productoExistente != null)
                {
                    // Si el producto ya está en el carrito, solo sumamos la cantidad
                    productoExistente.Cantidad += detalle.Cantidad;
                    productoExistente.Costo = productoExistente.Cantidad * productoExistente.Costo;
                }
                else
                {
                    // Si no existe, agregamos el producto al carrito
                    CarritoAMostrar.CarritoDetalle.Add(detalle);
                }
            }
        }
    }

