        {

            if (!CarritoAMostrar.CarritoDetalle.Any())
            {
                await carritoService.Eliminar(CarritoAMostrar.CarritoId); // Eliminar el carrito vacío de la base de datos
                CarritoAMostrar = new(); // Reiniciar el carrito en memoria
                Console.WriteLine("El carrito estaba vacío y fue eliminado.");
            }
            else
            {
                // Guardar el carrito en la base de datos
                await carritoService.Guardar(CarritoAMostrar);
                Console.WriteLine("Carrito sincronizado con la base de datos.");
            }
        }

    }

