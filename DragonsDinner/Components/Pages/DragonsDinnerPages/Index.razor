                                                                <div class="cart-item-name"><strong>@detalle.Producto.Nombre</strong></div>
                                                                <div class="cart-item-actions">
                                                                    <div class="input-group">
                                                                        <button type="button" class="quantity-button btn btn-outline-secondary" @onclick="() => DecrementarCantidad(detalle)"> - </button>
                                                                        <input type="text" class="quantity-button text-center col-2" @bind="detalle.Cantidad" />
                                                                        <button type="button" class="quantity-button btn btn-outline-secondary" @onclick="() => IncrementarCantidad(detalle)"> + </button>
                                                                    </div>
                                                                </div>
                                                            </div>

